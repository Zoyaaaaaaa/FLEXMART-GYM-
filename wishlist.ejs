<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
 <style>
    body {
    font-family: Arial, sans-serif;
    background-color: #000; /* Black background */
    color: #fff; /* White text */
    padding: 20px;
}

.wishlist-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}
.wishlist-item {
    background-color: #222;
    border: 1px solid #444;
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    transform: translateY(0);
    cursor: pointer; /* Add this line to make the cursor change to a pointer on hover */
}

.wishlist-item:hover {
    transform: scale(1.05); /* Scale the item on hover */
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.5); /* Increase the shadow on hover */
}

.wishlist-header {
    text-align: center;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.wishlist-item {
    background-color: #222; /* Dark gray background */
    border: 1px solid #444; /* Dark border */
    margin-bottom: 20px;
    padding: 15px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Slightly more pronounced shadow */
    transform: translateY(0);
}

.wishlist-item img {
    max-width: 100px;
    height: auto;
    margin-right: 20px;
}

.wishlist-item-details {
    flex: 1;
}

.wishlist-item-title {
    font-size: 18px;
    margin-bottom: 10px;
}

.heart-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    color: #ff3f6c; /* Red heart icon */
    font-size: 24px;
    cursor: pointer;
}

.remove-button {
    background-color: #e61344; /* Red background for the remove button */
    color: white;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.remove-button:hover {
    background-color: #e21b3c; /* Slightly darker red on hover */
}

.bin-icon {
    margin-right: 8px;
}

@keyframes expandWishlist {
    0% {
        width: 100%;
    }
    50% {
        width: 120%;
    }
    100% {
        width: 100%;
    }
}

.expanded {
    animation: expandWishlist 1s ease;
}

 </style>
</head>

<body>
   

    <div class="wishlist-container">
        <div class="wishlist-header" style="background-color: #000;">My Wishlist</div>
    
        <!-- Existing wishlist items -->
        <% wishlist.forEach(item => { %>
            <div class="wishlist-item" data-id="<%= item.id %>">
                <img src="<%= item.image %>" alt="<%= item.name %>">
                <div class="wishlist-item-details">
                    <h3 class="wishlist-item-title"><%= item.name %></h3>
                    <!-- Add other item details here -->
                    <p><%= item.price %></p>
                    <button class="remove-button" onclick="viewProduct('<%= item.id %>')">
                        <i class="fa-solid fa-arrow-up-right-from-square" style="color: #ffffff;"></i> View Product</button>
                    <button class="remove-button" onclick="removeFromWishlist('<%= item.id %>')">
                        <i class="fas fa-trash bin-icon"></i> Remove from Wishlist
                    </button>
                </div>
                <span class="heart-icon">&hearts;</span>
            </div>
        <% }); %>
    </div>
    
    <!-- ... (other HTML code) ... -->
    <script>
        function viewProduct(productId) {
            // Redirect to the product details page with the product ID
            window.location.href = `/pdt/${productId}`;
        }
    
        function removeFromWishlist(itemId) {
            // Logic to remove the item from the wishlist
            const wishlistItem = document.querySelector(`.wishlist-item[data-id="${itemId}"]`);
            if (wishlistItem) {
                wishlistItem.remove();
                // Here you can also send an AJAX request to update the server-side wishlist
                console.log(`Item with ID ${itemId} removed from the wishlist.`);
            } else {
                console.log(`Item with ID ${itemId} not found in the wishlist.`);
            }
        }
    </script>
    
    <script>
        function removeFromWishlist(itemId) {
            // Logic to remove the item from the wishlist
            const wishlistItem = document.querySelector(`.wishlist-item[data-id="${itemId}"]`);
            if (wishlistItem) {
                wishlistItem.remove();
                // Here you can also send an AJAX request to update the server-side wishlist
                console.log(`Item with ID ${itemId} removed from the wishlist.`);
            } else {
                console.log(`Item with ID ${itemId} not found in the wishlist.`);
            }
        }
    </script>
</body>

</html>


