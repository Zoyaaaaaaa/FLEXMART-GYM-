<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Head content goes here -->
</head>
<body>
    <style>
        body {
    font-family: Arial, sans-serif;
    margin: 20px;
}

.cart-item {
    display: flex;
    margin-bottom: 20px;
}

.product-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-right: 20px;
}
   
          /* CSS styles go here */
      </style>
      <h1>Shopping Cart</h1>
      
      <% let totalPrice = 0; %>
      <% cart.forEach(product => { %>
          <div class="cart-item">
              <img src="<%= product.image %>" alt="<%= product.name %>" class="product-image">
              <div class="product-details" style="margin: 20px;">
                  <h2><%= product.name %></h2>
                  <p>ID: <%= product.id %></p>
                  <p>Price: $<%= product.price %></p>
              </div>
          </div>
          <% totalPrice += parseFloat(product.price); %>
      <% }); %>
      
      <!-- Other content goes here -->
  
      <div class="ibox-content">
          <a href="/exit">
              <button class="btn btn-primary pull-right">
                  <i class="fa fa-shopping-cart"></i> Checkout 
              </button>
          </a>
          <a href="/equipments">
              <button class="btn btn-white">
                  <i class="fa fa-arrow-left"></i> Continue shopping
              </button>
          </a>
      </div>
      
      <div class="col-md-3">
          <div class="ibox">
              <div class="ibox-title">
                  <h3>Cart Summary</h3>
              </div>
              <div class="ibox-content">
                  <h3>Total</h3>
                  <h2 class="font-bold">Rs. <%= totalPrice.toFixed(2) %></h2>
              </div>
          </div>
      </div>
  </body>
  </html>
