                        <div class="ibox-content">
                            <span>Total</span>
                            <h2 class="font-bold">Rs 7125</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function deleteProduct(deleteIcon) {
            var confirmation = confirm("Are you sure you want to remove this item?");
            if (confirmation) {
                var productContainer = deleteIcon.parentElement.parentElement.parentElement;
                productContainer.style.display = "none";
            }
        }
    </script>
</body>
</html>
